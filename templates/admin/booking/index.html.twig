{% extends 'Admin/baseAdmin.html.twig' %}

{% block title %}Administration des annonces !{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des commentaires</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Dur√©e</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for booking in bookings %}
        <tr>
            <td>{{ booking.id }}</td>
            <td>{{ booking.createAt | date('d/m/Y H:i') }}</td>
            <td> 
                <img src="http://placehold.it/28x28" alt="avatar de {{ booking.id }}" class="avatar avatar-micro mr-2">{{ booking.booker.fullName }}
            </td>
            <td> {{ booking.annonce.title }}</td>
            <td>{{booking.duration}}</td>
            <td>{{booking.amount | number_format(2, ",", " ")}} &euro;</td>
            <td>
                <a href="{{ path('admin_booking_edit', { 'id' : booking.id} )}}" class="btn btn-warning rounded p-1"><i class="fas fa-edit"></i></a>
                <a href="{{ path('admin_booking_delete', { 'id' : booking.id} )}}" class="btn btn-danger rounded p-1"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
