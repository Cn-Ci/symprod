{% extends 'Admin/baseAdmin.html.twig' %}

{% block title %}Administration des annonces !{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des commentaires</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Auteur</th>
                <th class="text-center">Commentaires</th>
                <th class="text-center">Note</th>
                <th>Annonce</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for comment in comments %}
        <tr>
            <td>{{ comment.id }}</td>
            <td>{{ comment.createAt | date('d/m/Y H:i') }}</td>
            <td> 
                <img src="http://placehold.it/28x28" alt="avatar de {{ comment.author.fullName }}" class="avatar avatar-micro mr-2">{{ comment.author.fullName }}
            </td>
            <td> {{ comment.content }}</td>
            <td>{{ comment.rating | length }}</td>
            <td>{{ comment.annonce.title }}</td>
            <td>
                <a href="{{ path('admin_comment_edit', { 'id' : comment.id} )}}" class="btn btn-warning rounded p-1"><i class="fas fa-edit"></i></a>
                <a href="{{ path('admin_comment_delete', { 'id' : comment.id} )}}" class="btn btn-danger rounded p-1"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
