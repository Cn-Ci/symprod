{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Modification du commentaire numéro {{ comment.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}

<div class="container">
    <h1 class="my-5">Modifier le commentaire {{ comment.id }}</h1>

    <div class="row">
        <div class="col">
            <div class="alert alert-info">
                <p><strong>Annonce lié</strong> : {{ comment.annonce.title }}</p>
                <p><strong>Auteur</strong> : {{ comment.author.fullName }}</p>
                <p><strong>Date de création</strong> : {{ comment.createAt | date('d/m/Y H:i') }}</p>
                <p><strong>Note donnée </strong> : {{ comment.rating | length  }}</p>
            </div>
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary rounded p-1 mt-3 float-right">
        <i class="fas fa-pen"></i>
        Enregistrer les Modifications
    </button>
</div>

    {{ form_end(form) }}

{% endblock %}

