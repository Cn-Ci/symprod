{% extends 'Admin/baseAdmin.html.twig' %}

{% block title %}Administration des annonces !{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des annonces</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">RÃ©servation</th>
                <th class="text-center">Note</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for ad in ads %}
        <tr>
            <td>{{ ad.id }}</td>
            <td>{{ ad.title }}</td>
            <td> 
                <img src="http://placehold.it/28x28" alt="avatar de {{ ad.author.fullName }}" class="avatar avatar-micro mr-2">{{ ad.author.fullName }}
            </td>
            <td class="text-center"> 
                <span class="badge badge-info rounded">{{ ad.bookings | length }}</span>
            </td>
            <td class="text-center">
                <span class="badge badge-info rounded">{{ ad.getAvgRatings | number_format(1, ',' , ' ') }}</span></td>
            <td>
                <a href="{{ path('admin_ads_edit', { 'id' : ad.id} )}}" class="btn btn-warning rounded p-1"><i class="fas fa-edit"></i></a>
                <a href="{{ path('admin_ads_delete', { 'id' : ad.id} )}}" class="btn btn-danger rounded p-1"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
