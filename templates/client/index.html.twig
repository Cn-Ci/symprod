{% extends 'baseChadprod.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1 class="text-center">Client index</h1>
        <center>
            <a class="btn btn-info" href={{ path('client_new') }}>Ajouter un client</a>
        </center>
    <table class="table table-striped table-info text-center my-4">
        <thead>
            <tr>
                <th><h4>Nom</h4></th>
                <th><h4>Prenom</h4></th>
                <th><h4>Adresse</h4></th>
                <th><h4>actions</h4></th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.nom }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('client_show', {'id': client.nom}) }}">Consulter</a>
                    <a class="btn btn-warning" href="{{ path('client_edit', {'id': client.nom}) }}">Modifier</a>
                    <a class="btn btn-danger" href="{{ path('client_delete', {'id': client.nom}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
