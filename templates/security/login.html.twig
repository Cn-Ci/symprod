{% extends 'base.html.twig' %}

{% block body %}

    <form action="" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info mb-3 text-center">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <center>
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="alert alert-info rounded py-3 px-3">
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control col-8 text-center" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control col-8 text-center" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">   

                <div class="checkbox m-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>
                
                <button class="btn btn-success rounded p-1" type="submit">
                    Sign in
                </button>
            </div>
        </div>
        </center>
    </form>
{% endblock %}
